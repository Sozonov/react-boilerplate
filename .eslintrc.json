{
  "extends": ["atomix-react"],
  "parser": "babel-eslint",
  "parserOptions": {
    "ecmaVersion": 2017,
    "sourceType": "module"
  },
  "env": {
    "browser": true,
    "es6": true
  },
  "settings": {
    "import/resolver": {
      "node": {
        "extensions": [".js"],
        "moduleDirectory": ["node_modules", "src"]
      }
    }
  },
  "rules": {
    "import/newline-after-import": 0,
    "comma-dangle": 0,
    "jsx-a11y/anchor-is-valid": 0,
    "brace-style": 0
  }
}
